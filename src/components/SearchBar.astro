---
let query = "";
if (Astro.request && Astro.request.url) {
  const url = new URL(Astro.request.url);
  query = url.searchParams.get("query") || "";
}
---

<style>
  * {
    font-family: 'Satoshi', sans-serif;
  }

  .search-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
    padding: 0 10px;
    box-sizing: border-box;
  }

  .search-box {
    padding: 15px;
    border-radius: 8px;
    border: 2px solid #ccc;
    width: 50vw;
    font-size: 18px;
    box-sizing: border-box;
    max-width: 1000px;
  }

  .search-box::placeholder {
    font-family: 'Satoshi', sans-serif;
  }

  .search-button {
    display: none;
    padding: 15px;
    border-radius: 8px;
    border: 2px solid #ccc;
    color: white;
    font-size: 18px;
    cursor: pointer;
    margin-left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .search-button:hover {
    background-color: #bcfb95;
    transition: background-color 0.5s;
  }

  .search-button:active {
    background-color: #8ce196;
  }

  .search-button img {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 600px) {
    .search-container {
      flex-direction: column;
    }

    .search-box {
      width: 80vw;
    }

    .search-button {
      display: inline-flex;
      width: 50px;
      height: 50px;
      margin-top: 10px;
    }
  }
</style>

<div class="search-container">
  <form action="/" method="GET" style="display: flex; align-items: center;">
    <input
      type="text"
      name="query"
      class="search-box"
      placeholder="Search by YouTube URL"
      value={query}
    />
    <button type="submit" class="search-button">
      <img src="search.png" alt="Search" />
    </button>
  </form>
</div>
