<style>
  * {
    font-family: 'Satoshi', sans-serif;
  }

  .search-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
    padding: 0 10px;
    box-sizing: border-box;
    flex-direction: column;
  }

  .search-box-container {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 1000px;
    transition: transform 1s ease, padding-top 1s ease;
  }

  .search-box {
    padding: 15px;
    border-radius: 8px;
    border: 2px solid #ccc;
    width: 100%;
    font-size: 18px;
    box-sizing: border-box;
    flex-grow: 1;
  }

  .search-box::placeholder {
    font-family: 'Satoshi', sans-serif;
  }

  .search-button {
    padding: 15px;
    border-radius: 8px;
    border: 2px solid #ccc;
    color: white;
    font-size: 18px;
    cursor: pointer;
    margin-left: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .search-button:hover {
    background-color: #bcfb95;
    transition: background-color 0.5s;
  }

  .search-button:active {
    background-color: #8ce196;
  }

  .search-button img {
    width: 24px;
    height: 24px;
    display: block;
  }

  .loading-icon {
    border: 4px solid #f3f3f3;
    border-top: 4px solid #3498db;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    animation: spin 2s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @media (max-width: 600px) {
    .search-container {
      padding: 20px;
    }

    .search-box-container {
      flex-direction: column;
      align-items: stretch;
    }

    .search-box {
      width: 100%;
      margin-bottom: 10px;
    }

    .search-button {
      width: 100%;
      margin-left: 0;
    }
  }
</style>

<div class="search-container">
  <div class="search-box-container" data-search-container>
    <input
      type="text"
      class="search-box"
      placeholder="Search by YouTube URL"
      data-search-input
    />
    <button data-search-button class="search-button">
      <img src="search.png" alt="Search" />
    </button>
  </div>
</div>

<script>
  const buttons = document.querySelectorAll('[data-search-button]');
  const searchContainer = document.querySelector('[data-search-container]');
  const searchInput = document.querySelector('[data-search-input]');

  buttons.forEach((button) => {
    button.addEventListener('click', (event) => {
      event.preventDefault();
      
      const icon = button.querySelector('img');
      if (icon) icon.style.display = 'none';

      searchInput.disabled = true;
      searchContainer.style.paddingTop = '10px';
      searchContainer.style.transform = 'translateY(-calc(100vh - 10px))';

      setTimeout(() => {
        button.style.display = 'none';
      }, 0);
    });
  });
</script>
